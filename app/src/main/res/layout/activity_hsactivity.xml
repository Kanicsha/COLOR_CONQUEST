        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
    android:id="@+id/rankcard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
